<Page x:Class="AgendaPersonal.Citas"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AgendaPersonal"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Citas">

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
           <StackPanel>
            <TextBlock Text="Página de Citas"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="24"
                   FontWeight="Bold"
                   />
            <ListBox
                x:Name="ListaCitasInterfaz"
                >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="5">
                            <TextBlock Text="{Binding Titulo}" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Fecha, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"/>
                            <TextBlock Text="{Binding Descripcion}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock 
                Text="Agregar Nueva Cita"
                FontSize="20"
                FontWeight="Bold"
                Margin="0,20,10,10"
                />
            <TextBlock 
                Text="Titulo"
                FontSize="14"
                FontWeight="Medium"
                Margin="10,20,10,0"
                />
            <TextBox
                x:Name="TxtTituloCita"
                Margin="10,10,10,10"
                />
            <TextBlock 
                Text="Descripción"
                FontSize="14"
                FontWeight="Medium"
                Margin="10,20,10,0"
            />
            <TextBox 
                x:Name="TxtDescripcionCita"
                Height="100"
                Margin="10,10,10,10"
            />

                <DatePicker 
                x:Name="DatePickerCita"
                Margin="10,10,10,10"
                />

                <Button 
                Content="Agregar Cita"
                Margin="10,20,0,0" Click="Button_Click"
            />
        </StackPanel> 
        </ScrollViewer>
        
        
    </Grid>
</Page>
